{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "definitions": {
        "action": {
            "type": "object",
            "properties": {
                "permit": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "block": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "func": {
                    "type": "string"                        
                },
                "shoot": {
                    "type": "boolean"
                },
                "ref": {
                    "type": "object",
                    "properties": {
                        "db": {
                            "type": "string"
                        },
                        "table": {
                            "type": "string"                        
                        },
                        "query": {
                            "type": "object",
                            "properties": {
                                "func": {
                                    "type": "string"
                                },
                                "list": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/definitions/query-item"
                                    }
                                }                            
                            }
                        },
                        "check": {
                            "type": "string"
                        }                        
                    }                    
                }
            }
        },
        "bson-item": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "string"                   
                },
                "name": {
                    "type": "string"
                }                
            }
        },
        "view-item": {
            "type": "object",
            "properties": {
                "key": {
                    "type": "string"                   
                },
                "permit": {
                    "type": "string"                   
                },
                "order": {
                    "type": "number",
                    "enum": [10, 20, 30]                    
                }                
            }
        },
        "sort-item": {
            "type": "object",
            "properties": {
                "key": {
                    "type": "string"                   
                },
                "value": {
                    "type": "number",
                    "enum": [1, -1]
                }            
            }
        },
        "query-item": {
            "type": "object",
            "properties": {
                "key": {
                    "type": "string"                   
                },                
                "fms-value": {
                    "type": "string",
                    "enum": [
                        "fms_code{{login_member_id}}",
                        "fms_code{{login_member_type}}",
                        "fms_code{{filter_member}}",
                        "fms_code{{filter_period}}",
                        "fms_code{{filter_template}}",
                        "fms_code{{server_ip}}",
                        "fms_code{{server_date}}",
                        "fms_code{{server_lang}}"
                    ]
                },
                "string-value": {
                    "type": "string"
                },
                "number-value": {
                    "type": "number"
                },
                "ref-value": {
                    "type": "object",
                    "properties": {
                        "db": {
                            "type": "string"
                        },
                        "itemTable": {
                            "type": "string"
                        },
                        "query": {
                            "type": "array"
                        },
                        "projection": {
                            "type": "string"
                        }
                    }
                },
                "value": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": ["number", "string", "in", "ne"]                    
                }  
            }
        },
        "field": {
            "type": "object",
            "properties": {
                "key": {
                    "type": "string"
                },
                "field": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "shortName": {
                    "type": "string"
                },              
                "order": {
                    "type": "number",
                    "minimum": 10,
                    "maximum": 1000
                },
                "reportOrder": {
                    "type": "number",
                    "minimum": 10,
                    "maximum": 1000
                },
                "autoset": {
                    "type": "string",
                    "enum": ["fms_code{{login_member_id}}"]
                },
                "rendered": {
                    "type": "boolean"
                },
                "reportRendered": {
                    "type": "boolean"
                },
                "readonly": {
                    "type": "boolean"
                },
                "quickFilter": {
                    "type": "boolean"
                },  
                "roleCheck": {
                    "type": "boolean"
                },  
                "money": {
                    "type": "boolean"
                },  
                "observable": {
                    "type": "boolean"
                },  
                "componentType": {
                    "type": "string",
                    "enum": ["inputText", "inputTextarea", "inputDate", "selectOneMenu", "selectBooleanCheckbox"]
                },
                "valueType": {
                    "type": "string",
                    "enum": ["java.lang.String", "java.lang.Integer", "java.lang.Boolean"]
                },
                "accesscontrol": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "converter": {
                    "type": "string",
                    "enum": ["SelectOneStringConverter", "SelectOneObjectIdConverter"]
                },          
                "items": {
                    "type": "object",
                    "properties": {
                        "ref": {
                            "type": "object",
                            "properties": {
                                "db": {
                                    "type": "string"
                                },
                                "itemTable": {
                                    "type": "string"
                                },
                                "query": {
                                    "type": "object",
                                    "properties": {
                                        "func": {
                                            "type": "string"
                                        },
                                        "list": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/definitions/query-item"
                                            }
                                        }                            
                                    }
                                },
                                "sort": {
                                    "type": "object",
                                    "properties": {
                                        "func": {
                                            "type": "string"
                                        },  
                                        "list": {                                        
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/definitions/sort-item"
                                            }
                                        }                            
                                    }
                                },
                                "v": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/definitions/view-item"
                                    }         
                                }                    
                            }
                        },
                        "func": {
                            "type": "string"
                        },
                        "list": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/bson-item"
                            }
                        }
                    }
                }
            }
        }
    },
    "properties": {
        "schemaVersion": {
            "type": "string"
        },
        "key": {
            "type": "string"
        },
        "db": {
            "type": "string"
        },
        "collection": {
            "type": "string"
        },
        "versionCollection": {
            "type": "string"
        },
        "userConstantNote": {
            "type": "string"
        },
        "userNote": {
            "type": "string"
        },      
        "form": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "forms": {
            "type": "string"
        },
        "defaultSortField": {
            "type": "string"
        },
        "loginFkField": {
            "type": "string"
        },
        "menuOrder": {
            "type": "number"
        },
        "calculate-ref":{
            "type":"object",
            "properties":{
                "func":{
                    "type":"string"
                },
                "doc":{
                    "type":"object",
                    "properties":{
                        "cache":{
                            "type":"boolean"
                        },
                        "db":{
                            "type":"string"
                        },
                        "collection":{
                            "type":"string"
                        },
                        "query":{
                            "type":"array",
                            "items":{
                                "func":{
                                    "type":"string"
                                }
                            }
                        }
                    }
                }                
            }
        },
        "dimension": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "string",
                    "enum": ["page", "table", "grid"]                            
                },
                "list": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "roles": {
                                "type": "array",
                                "items": {
                                    "type": "string"                                
                                }
                            },
                            "value": {
                                "type": "string",    
                                "enum": ["page", "table", "grid"]                            
                            }
                        }
                    }
                }
            }          
        },
        "type": {
            "type": "string",
            "enum": ["node", "website"]
        },  
        "filter": {
            "type": "object",
            "properties": {
                "forms": {
                    "type": "string"
                }
            }
        },       
        "myNamedQueries": {
            "type": "object",
            "properties": {
                "overAllCheck": {
                    "type": "string"
                },
                "include": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "roles": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }   
                            },
                            "query": {
                                "type": "object",
                                "properties": {
                                    "func": {
                                        "type": "string"
                                    },
                                    "list": {
                                        "type": "array",
                                        "items":{
                                            "$ref": "#/definitions/query-item"
                                        }                                     
                                    }
                                }                                                          
                            },
                            "priority": {
                                "type": "number"
                            }
                        }
                    }
                }
            }            
        },
        "accesscontrol": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },  
        "upperNodes": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "actions": {
            "type": "object",
            "properties": {
                "create": {
                    "$ref": "#/definitions/action"
                },
                "delete": {
                    "$ref": "#/definitions/action"
                },
                "download": {
                    "$ref": "#/definitions/action"
                },
                "read": {
                    "$ref": "#/definitions/action"
                },
                "save": {
                    "$ref": "#/definitions/action"
                },
                "upload": {
                    "$ref": "#/definitions/action"
                }
            }
        },
        "fields": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/field"
            }
        }
    }
}
